@model SavedMessages.DataAccessLayer.Entities.FileLocation

@{
    ViewBag.Title = "DeleteFile";
}

<h2>DeleteFile</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FileLocation</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.File)
        </dt>

        <dd>
            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                           + Convert.ToBase64String(Model.File) + "\" />")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "GetAllFiles")
        </div>
    }
</div>
