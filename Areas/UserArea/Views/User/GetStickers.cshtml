@model IEnumerable<SavedMessages.DataAccessLayer.Entities.Sticker>

@{
    ViewBag.Title = "GetStickers";
}

<h2>GetStickers</h2>

<p>
    @Html.ActionLink("Create New", "CreateSticker")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Stickers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                           + Convert.ToBase64String(item.Stickers) + "\" />")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Details", "StickerDetails", new { id=item.StickerId }) |
            @Html.ActionLink("Delete", "DeleteSticker", new { id=item.StickerId })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Back to MyInfo", "MyDetails") |
</p>